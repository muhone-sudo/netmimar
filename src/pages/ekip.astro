---
export const prerender = true;

import BaseLayout from "../layouts/BaseLayout.astro";
import { getReader } from "../lib/reader";

let members: any[] = [];
try {
    const reader = getReader();
    const teamRaw = await reader.collections.team.all();
    members = teamRaw
        .map((t) => ({ slug: t.slug, ...t.entry }))
        .sort((a: any, b: any) => (a.order || 0) - (b.order || 0));
} catch (e) {
    console.error("Team read error:", e);
}
---

<BaseLayout title="Ekibimiz — NetMimar">
    <section class="py-20 bg-surface">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h1 class="text-3xl sm:text-4xl font-bold text-primary mb-4">
                    Ekibimiz
                </h1>
                <p class="text-text-muted max-w-2xl mx-auto">
                    Projelerinizi birlikte hayata geçiren profesyonel ekibimiz.
                </p>
            </div>

            {
                members.length > 0 ? (
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                        {members.map((member: any) => (
                            <div class="bg-surface rounded-2xl border border-border p-6 text-center transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                                {member.photo ? (
                                    <img
                                        src={member.photo}
                                        alt={member.name}
                                        class="w-32 h-32 rounded-full object-cover mx-auto mb-4 border-2 border-border"
                                    />
                                ) : (
                                    <div
                                        class="w-32 h-32 rounded-full flex items-center justify-center text-4xl font-bold text-white mx-auto mb-4"
                                        style="background: linear-gradient(135deg, #3b82f6, #60a5fa);"
                                    >
                                        {member.name?.charAt(0)}
                                    </div>
                                )}
                                <h2 class="text-lg font-semibold text-primary mb-1">
                                    {member.name}
                                </h2>
                                <p class="text-sm text-text-muted mb-4">
                                    {member.role}
                                </p>
                                <div class="flex justify-center gap-3">
                                    {member.socialEmail && (
                                        <a
                                            href={`mailto:${member.socialEmail}`}
                                            class="text-text-muted hover:text-accent transition-colors"
                                            aria-label="Email"
                                        >
                                            <svg
                                                class="w-5 h-5"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                                />
                                            </svg>
                                        </a>
                                    )}
                                    {member.socialLinkedin && (
                                        <a
                                            href={`https://linkedin.com/in/${member.socialLinkedin}`}
                                            target="_blank"
                                            class="text-text-muted hover:text-accent transition-colors"
                                            aria-label="LinkedIn"
                                        >
                                            <svg
                                                class="w-5 h-5"
                                                fill="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                            </svg>
                                        </a>
                                    )}
                                    {member.socialTwitter && (
                                        <a
                                            href={`https://twitter.com/${member.socialTwitter}`}
                                            target="_blank"
                                            class="text-text-muted hover:text-accent transition-colors"
                                            aria-label="Twitter"
                                        >
                                            <svg
                                                class="w-5 h-5"
                                                fill="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                                            </svg>
                                        </a>
                                    )}
                                    {member.socialInstagram && (
                                        <a
                                            href={`https://instagram.com/${member.socialInstagram}`}
                                            target="_blank"
                                            class="text-text-muted hover:text-accent transition-colors"
                                            aria-label="Instagram"
                                        >
                                            <svg
                                                class="w-5 h-5"
                                                fill="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                                            </svg>
                                        </a>
                                    )}
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <p class="text-center text-text-muted">
                        Henüz ekip üyesi eklenmemiş.
                    </p>
                )
            }
        </div>
    </section>
</BaseLayout>
