---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getReader } from "../../lib/reader";

let services: any[] = [];
try {
    const reader = getReader(Astro.locals.runtime?.env?.GITHUB_TOKEN);
    const servicesRaw = await reader.collections.services.all();
    services = servicesRaw.map((s) => ({ slug: s.slug, ...s.entry }));
} catch (e) {
    console.error("Services read error:", e);
}
---

<BaseLayout title="Hizmetlerimiz — NetMimar">
    <section class="py-20 bg-surface">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h1 class="text-3xl sm:text-4xl font-bold text-primary mb-4">
                    Hizmetlerimiz
                </h1>
                <p class="text-text-muted max-w-2xl mx-auto">
                    Size en iyi hizmeti sunmak için buradayız.
                </p>
            </div>

            {
                services.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {services.map((service: any) => (
                            <a
                                href={`/hizmetler/${service.slug}`}
                                class="group bg-surface rounded-2xl border border-border overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                            >
                                {service.featuredImage && (
                                    <div class="aspect-video overflow-hidden">
                                        <img
                                            src={service.featuredImage}
                                            alt={service.title}
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                        />
                                    </div>
                                )}
                                <div class="p-6">
                                    {service.icon && (
                                        <span class="text-2xl mb-3 block">
                                            {service.icon}
                                        </span>
                                    )}
                                    <h2 class="text-lg font-semibold text-primary mb-2 group-hover:text-accent transition-colors">
                                        {service.title}
                                    </h2>
                                    <p class="text-text-muted text-sm">
                                        {service.shortDescription}
                                    </p>
                                    <span class="inline-flex items-center gap-1 text-accent text-sm font-medium mt-3">
                                        Detaylar{" "}
                                        <svg
                                            class="w-3 h-3"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 5l7 7-7 7"
                                            />
                                        </svg>
                                    </span>
                                </div>
                            </a>
                        ))}
                    </div>
                ) : (
                    <p class="text-center text-text-muted">
                        Henüz hizmet eklenmemiş.
                    </p>
                )
            }
        </div>
    </section>
</BaseLayout>
